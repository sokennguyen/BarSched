        <Grid Grid.Row="1"
              x:Name="Reserve_cal"
              Margin="0,10"
              ShowGridLines="True"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
